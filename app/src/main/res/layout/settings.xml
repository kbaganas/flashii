<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cabin_semibold"
                android:text="@string/settings"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/altitudeTextId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/maxHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/maxHz1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/flickering_off_m3" />

                <TextView
                    android:id="@+id/maxHz2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change the max frequency of flickering in Hertz. \nChange flickering time in seconds after timer expiration."
                    tools:ignore="VisualLintLongText" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/timerSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/timerSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/timer_off_m3" />

                <TextView
                    android:id="@+id/timerSetting2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change the max Time in Hours" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/tiltSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tiltSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tilt_off_m3" />

                <TextView
                    android:id="@+id/tiltSetting2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change tilt sensitivity" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/soundSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/soundSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/sound_off_m3" />

                <TextView
                    android:id="@+id/soundSetting2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change sound sensitivity" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/callSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/callSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_call_off_m3" />

                <TextView
                    android:id="@+id/callSetting2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change flickering time in seconds, after incoming call" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/smsSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/smsSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_sms_off_m3" />

                <TextView
                    android:id="@+id/smsSetting2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change flickering time in seconds, after incoming SMS" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/batterySetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/batterySetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/battery_off_m3" />

                <TextView
                    android:id="@+id/batterySetting2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change flickering time in seconds, after battery power level is reached" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/altitudeSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/altitudeSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/altitude_off_m3" />

                <TextView
                    android:id="@+id/altitudeSetting2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:text="Change flickering time in seconds, after altitude height is reached" />
            </LinearLayout>


            <!-- Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="16dp"
                android:gravity="center|center_horizontal"
                android:textAlignment="center">

                <Button
                    android:id="@+id/settingsResetBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_semibold"
                    android:gravity="center|center_horizontal"
                    android:minHeight="48dp"
                    android:text="@string/reset"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:backgroundTint="@color/blueOff" />

                <Button
                    android:id="@+id/settingsCloseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_semibold"
                    android:gravity="center|center_horizontal"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:minHeight="48dp"
                    app:backgroundTint="@color/blueOff"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>