<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="36dp"
            android:orientation="vertical">

            <!-- arrow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="36dp">

                <ImageButton
                    android:id="@+id/settingsGoBackArrow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/backgroundWhite"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/backArrow"
                    android:src="@drawable/arrow_left" />

                <View
                    android:id="@+id/firstDivider"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/resetBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_semibold"
                    android:text="@string/reset"
                    android:textSize="14sp"
                    app:backgroundTint="@color/blueOff"
                    app:strokeColor="@color/whiteCollar"
                    app:strokeWidth="1dp"
                    tools:ignore="VisualLintButtonSize"
                    app:cornerRadius="8dp"/>
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/rateText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/cabin_semibold"
                android:text="@string/settings"
                android:textAlignment="center"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/rateText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cabin_regular"
                android:textAlignment="center"
                android:text="@string/settingsComments"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="36dp">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/cabin_semibold"
                    android:text="@string/Feature"
                    android:textSize="14sp"
                    tools:ignore="VisualLintLongText,TextSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Specification"
                    android:fontFamily="@font/cabin_semibold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dividers"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/cabin_semibold"
                    android:text="@string/or"
                    android:background="@color/blueOff"
                    tools:ignore="ExtraText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:fontFamily="@font/cabin_semibold"
                    android:layout_gravity="center_vertical"
                    android:text="@string/or"
                    android:background="@color/blueOff" />
            </LinearLayout>

            <!-- row -->
            <LinearLayout
                android:id="@+id/maxHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/maxHz1"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/flickering_off_m3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/cabin_semibold"
                                android:layout_marginEnd="12dp"
                                android:textSize="16sp"
                                android:layout_gravity="start"
                                android:gravity="center_vertical"
                                android:text="@string/settingsFlickeringTitle"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/cabin_regular"
                                android:layout_marginEnd="12dp"
                                android:textSize="12sp"
                                android:layout_gravity="start"
                                android:gravity="center_vertical"
                                android:text="@string/settingsFlickeringNote"
                                tools:ignore="VisualLintLongText" />
                        </LinearLayout>
                        <EditText
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:autofillHints=""
                            android:background="@drawable/shape"
                            android:fontFamily="@font/cabin_regular"
                            android:gravity="center"
                            android:hint="@string/enterValue"
                            android:maxLength="3"
                            android:inputType="phone"
                            android:padding="3dp"
                            android:textColorHint="@color/greyNoteDarker4"
                            android:textSize="14sp"
                            tools:ignore="VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />
                    </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/timerSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/timerSetting1"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/timer_off_m3" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_semibold"
                        android:layout_marginEnd="12dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsTimerTitle"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_regular"
                        android:layout_marginEnd="12dp"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsTimerNote"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:autofillHints=""
                    android:background="@drawable/shape"
                    android:fontFamily="@font/cabin_regular"
                    android:gravity="center"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:padding="3dp"
                    android:textColorHint="@color/greyNoteDarker4"
                    android:textSize="14sp"
                    android:maxLength="1"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/tiltSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tilt_off_m3" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_semibold"
                        android:layout_marginEnd="12dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsTiltTitle"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_regular"
                        android:layout_marginEnd="12dp"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsTiltNote"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:background="@drawable/shape"
                    android:maxLength="2"
                    android:textColorHint="@color/greyNoteDarker4"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />


            <!-- row -->
            <LinearLayout
                android:id="@+id/soundSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/soundSetting1"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/sound_off_m3" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_semibold"
                        android:layout_marginEnd="12dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsSoundTitle"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_regular"
                        android:layout_marginEnd="12dp"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsSoundNote"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:maxLength="5"
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/callSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/callSetting1"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_call_off_m3" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_semibold"
                        android:layout_marginEnd="12dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsFlickeringCallTitle"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_regular"
                        android:layout_marginEnd="12dp"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsFlickeringCallNote"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:fontFamily="@font/cabin_regular"
                    android:textAlignment="center"
                    android:autofillHints=""
                    android:maxLength="3"
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/smsSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/smsSetting1"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_sms_off_m3" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_semibold"
                        android:layout_marginEnd="12dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsFlickeringSMSTitle"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_regular"
                        android:layout_marginEnd="12dp"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsFlickeringSMSNote"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:maxLength="3"
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/batterySetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/batterySetting1"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/battery_off_m3" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_semibold"
                        android:layout_marginEnd="12dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsBatteryTitle"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_regular"
                        android:layout_marginEnd="12dp"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsBatteryNote"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:maxLength="3"
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/altitudeSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/altitudeSetting1"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/altitude_off_m3" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_semibold"
                        android:layout_marginEnd="12dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsAltitudeTitle"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin_regular"
                        android:layout_marginEnd="12dp"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/settingsAltitudeNote"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:maxLength="3"
                    android:textColorHint="@color/greyNoteDarker1"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="@color/blueOffBack4" />


            <Button
                android:id="@+id/settingsApplyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_semibold"
                android:textAlignment="center"
                android:text="@string/applyChanges"
                android:textSize="14sp"
                app:backgroundTint="@color/blueOff"
                app:strokeColor="@color/whiteCollar"
                app:strokeWidth="1dp"
                tools:ignore="VisualLintButtonSize"
                app:cornerRadius="8dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="36dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>