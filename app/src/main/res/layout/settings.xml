<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:orientation="vertical">

            <!-- arrow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="36dp">

                <ImageButton
                    android:id="@+id/settingsGoBackArrow"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:scaleType="fitStart"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/backArrow"
                    android:src="@drawable/arrow_left" />

                <Button
                    android:id="@+id/resetBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_semibold"
                    android:text="@string/reset"
                    android:textSize="14sp"
                    app:backgroundTint="@color/blueOff"
                    app:strokeColor="@color/whiteCollar"
                    app:strokeWidth="1dp"
                    tools:ignore="VisualLintButtonSize"
                    app:cornerRadius="8dp"/>
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/rateText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/cabin_semibold"
                android:text="@string/settings"
                android:textSize="24sp"/>


            <!-- row -->
            <LinearLayout
                android:id="@+id/maxHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/maxHz1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/flickering_off_m3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/maxHz"
                            tools:ignore="VisualLintLongText" />

                        <EditText
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:autofillHints=""
                            android:background="@drawable/shape"
                            android:fontFamily="@font/cabin_regular"
                            android:gravity="center"
                            android:hint="@string/enterValue"
                            android:inputType="phone"
                            android:padding="3dp"
                            android:textColorHint="@color/greyNoteDarker4"
                            android:textSize="12sp"
                            tools:ignore="VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp"
                            android:text="@string/maxFlickeringTimer"
                            tools:ignore="VisualLintLongText" />

                        <EditText
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:hint="@string/enterValue"
                            android:inputType="phone"
                            android:textSize="12sp"
                            android:fontFamily="@font/cabin_regular"
                            android:autofillHints=""
                            android:textColorHint="@color/greyNoteDarker4"
                            android:background="@drawable/shape"
                            tools:ignore="VisualLintTextFieldSize" />
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/timerSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/timerSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/timer_off_m3" />

                <TextView
                    android:id="@+id/timerSetting2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/cabin_regular"
                    android:text="@string/settingsTimer" />

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:autofillHints=""
                    android:background="@drawable/shape"
                    android:fontFamily="@font/cabin_regular"
                    android:gravity="center"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:padding="3dp"
                    android:textColorHint="@color/greyNoteDarker4"
                    android:textSize="12sp"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/tiltSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tilt_off_m3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/cabin_regular"
                    android:text="@string/settingsTilt" />

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:background="@drawable/shape"
                    android:textColorHint="@color/greyNoteDarker4"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />


            <!-- row -->
            <LinearLayout
                android:id="@+id/soundSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/soundSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/sound_off_m3" />

                <TextView
                    android:id="@+id/soundSetting2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:text="@string/settingsSoundSensitivity" />

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/callSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/callSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_call_off_m3" />

                <TextView
                    android:id="@+id/callSetting2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:text="@string/settingsCall" />

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:fontFamily="@font/cabin_regular"
                    android:textAlignment="center"
                    android:autofillHints=""
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/smsSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/smsSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_sms_off_m3" />

                <TextView
                    android:id="@+id/smsSetting2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:text="@string/settingsSMS" />

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/batterySetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="34dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/batterySetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/battery_off_m3" />

                <TextView
                    android:id="@+id/batterySetting2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:text="@string/settingsBatteryMaxTime" />

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />

            <!-- row -->
            <LinearLayout
                android:id="@+id/altitudeSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:minHeight="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/altitudeSetting1"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/altitude_off_m3" />

                <TextView
                    android:id="@+id/altitudeSetting2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:text="@string/settingsAltitudeMaxTime"/>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:hint="@string/enterValue"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:fontFamily="@font/cabin_regular"
                    android:autofillHints=""
                    android:textColorHint="@color/greyNoteDarker4"
                    android:background="@drawable/shape"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/greyDivider" />


            <Button
                android:id="@+id/settingsApplyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_semibold"
                android:textAlignment="center"
                android:text="@string/applyChanges"
                android:textSize="14sp"
                app:backgroundTint="@color/blueOff"
                app:strokeColor="@color/whiteCollar"
                app:strokeWidth="1dp"
                tools:ignore="VisualLintButtonSize"
                app:cornerRadius="8dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="36dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>