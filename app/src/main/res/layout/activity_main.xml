<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flashiiId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <SeekBar
        android:id="@+id/flickeringBarId"
        android:layout_width="153dp"
        android:layout_height="56dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="232dp"
        android:progressTint="#47C4EE"
        android:rotation="-90"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flashLightBtnId"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/flashLightBtnId"
        android:layout_width="177dp"
        android:layout_height="153dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="124dp"
        android:background="#00A83939"
        android:contentDescription="@string/flashLightBtn"
        android:scaleType="fitEnd"
        android:src="@drawable/off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/flickerFlashLightId"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="78dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flashLightBtnId"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/off_flicker" />

    <ImageButton
        android:id="@+id/sosBtn"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="7dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashLightBtnId"
        app:srcCompat="@drawable/sos" />

    <TextView
        android:id="@+id/flickerTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="404dp"
        android:text="@string/oneHz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flashLightBtnId" />

    <ImageButton
        android:id="@+id/switchFlickerIncomingCallsId"
        android:layout_width="61dp"
        android:layout_height="59dp"
        android:layout_marginStart="64dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34"
        app:srcCompat="@drawable/phoneriningoff" />

</androidx.constraintlayout.widget.ConstraintLayout>