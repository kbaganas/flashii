<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flashiiId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 1st ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <!-- Incoming SMS -->
                    <LinearLayout
                        android:id="@+id/layoutSMSBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!-- Text -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextFlashlight"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextFLICKERon"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextIncoming"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextSMS"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                        </LinearLayout>

                        <!-- Image & Switch -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/smsBtnId"
                                android:layout_width="@dimen/MainImageSize"
                                android:layout_height="@dimen/MainImageSize"
                                android:background="#00FFFFFF"
                                android:contentDescription="@string/IncomingSMSContentDescription"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/incoming_sms_off_m3"/>
                            <Switch
                                android:id="@+id/switchSMS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>


                    </LinearLayout>

                    <!-- Incoming Call -->
                    <LinearLayout
                        android:id="@+id/layoutCallBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:orientation="horizontal">

                        <!-- Text -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextFlashlight"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextFLICKERon"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextIncoming"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainTextCALL"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                        </LinearLayout>

                        <!-- Image & Switch -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/switchFlickerIncomingCallsId"
                                android:layout_width="@dimen/MainImageSize"
                                android:layout_height="@dimen/MainImageSize"
                                android:background="#00FFFFFF"
                                android:contentDescription="@string/IncomingSMSContentDescription"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/incoming_call_off_m3"/>
                            <Switch
                                android:id="@+id/switchCALL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 2nd ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <!-- Sound -->
                    <LinearLayout
                        android:id="@+id/layoutSoundBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mainImageHeight"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/incomingSoundBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/IncomingSoundContentDescription"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/sound_off_m3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="@string/mainFeatureTextSound"
                            android:maxLines="1"
                            android:autoSizeMaxTextSize="18sp"
                            android:autoSizeMinTextSize="12sp"
                            android:layout_marginTop="4dp"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                        <TextView
                            android:id="@+id/soundBtnSetId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="13sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/cabin_regular"
                            android:gravity="center_horizontal"
                            android:maxLines="2"
                            android:text="@string/pavla"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 3rd ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <!-- Activated Features -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="start"
                        android:orientation="vertical">
                    </LinearLayout>

                    <!-- Flashlight -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/mainFlashlightHeight"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="32dp"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/FlashlightBtnContentDescription"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/flashlight_off4" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 4th ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <!-- Phone Tilt -->
                    <LinearLayout
                        android:id="@+id/layoutTiltBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mainImageHeight"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/margin16"
                        android:background="@drawable/button_selector"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/incomingShakeBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/ShakenBtnContentDescription"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/tilt_off_m3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="@string/mainFeatureTextTilt"
                            android:maxLines="1"
                            android:autoSizeMaxTextSize="18sp"
                            android:autoSizeMinTextSize="15sp"
                            android:layout_marginTop="4dp"
                            android:autoSizeTextType="uniform"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                        <TextView
                            android:id="@+id/tiltBtnSetId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="13sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/cabin_regular"
                            android:gravity="center_horizontal"
                            android:maxLines="2"
                            android:text="@string/pavla"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 5th ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <!-- Timer -->
                        <LinearLayout
                            android:id="@+id/layoutTimerBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainImageHeight"
                            android:gravity="center_horizontal"
                            android:background="@drawable/button_selector"
                            android:orientation="vertical">
                            <ImageButton
                                android:id="@+id/timerBtnId"
                                android:layout_width="@dimen/MainImageSize"
                                android:layout_height="@dimen/MainImageSize"
                                android:background="#00FFFFFF"
                                android:contentDescription="@string/TimerContentDescription"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/timer_off_m3" />

                            <TextView
                                android:id="@+id/timerBtnText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/cabin_regular"
                                android:gravity="center_horizontal"
                                android:maxLines="1"
                                android:text="@string/mainFeatureTextTimer"
                                android:textSize="@dimen/mainImageInfoText"
                                tools:ignore="VisualLintLongText" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/timerBtnTimeSetId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:autoSizeMaxTextSize="13sp"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/cabin_regular"
                                    android:gravity="center_horizontal"
                                    android:maxLines="2"
                                    android:text="@string/pavlaTime"
                                    android:textSize="@dimen/mainImageInfoText"
                                    tools:ignore="VisualLintLongText" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Network -->
                        <LinearLayout
                            android:id="@+id/layoutNetworkBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainImageHeight"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin16"
                            android:background="@drawable/button_selector"
                            android:orientation="vertical">
                            <ImageButton
                                android:id="@+id/networkConnectionBtn"
                                android:layout_width="@dimen/MainImageSize"
                                android:layout_height="@dimen/MainImageSize"
                                android:background="#00FFFFFF"
                                android:contentDescription="@string/FlashlightFlickeringOnOffNetworkContentDescription"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/network_off_m3" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainFeatureTextNetwork"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <TextView
                                android:id="@+id/networkBtnSetId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="13sp"
                                android:autoSizeMinTextSize="12sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/cabin_regular"
                                android:gravity="center_horizontal"
                                android:maxLines="2"
                                android:text="@string/pavla"
                                tools:ignore="VisualLintLongText" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <!-- Incoming SOS -->
                        <LinearLayout
                            android:id="@+id/layoutSOSBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_selector"
                            android:layout_marginBottom="@dimen/margin16"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/sosBtn"
                                android:layout_width="@dimen/MainImageSize"
                                android:layout_height="@dimen/MainImageSize"
                                android:background="#00FFFFFF"
                                android:contentDescription="@string/SOSBtnContentDescription"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/sos_off_m3" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainFeatureTextSOS"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="14sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                        </LinearLayout>

                        <!-- Battery -->
                        <LinearLayout
                            android:id="@+id/layoutBatteryBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainImageHeight"
                            android:background="@drawable/button_selector"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageButton
                                android:id="@+id/batteryBtnId"
                                android:layout_width="@dimen/MainImageSize"
                                android:layout_height="@dimen/MainImageSize"
                                android:background="#00FFFFFF"
                                android:contentDescription="@string/BatteryContentDescription"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/battery_off_m3" />
                            <TextView
                                android:id="@+id/batteryBtnText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin_regular"
                                android:text="@string/mainFeatureTextBattery"
                                android:maxLines="1"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeMinTextSize="12sp"
                                android:layout_marginTop="4dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center_horizontal"
                                tools:ignore="VisualLintLongText" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/batteryBtnSetId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:autoSizeMaxTextSize="13sp"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeTextType="uniform"
                                    android:layout_marginStart="8dp"
                                    android:fontFamily="@font/cabin_regular"
                                    android:gravity="center_horizontal"
                                    android:maxLines="2"
                                    android:text="@string/pavlaPerc"
                                    android:textSize="@dimen/mainImageInfoText"
                                    tools:ignore="VisualLintLongText" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- 6th ROW - Altitude -->
                <LinearLayout
                    android:id="@+id/layoutAltitudeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mainImageHeight"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_selector"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/altitudeBtnId"
                        android:layout_width="@dimen/MainImageSize"
                        android:layout_height="@dimen/MainImageSize"
                        android:background="#00FFFFFF"
                        android:contentDescription="@string/AltitudeContentDescription"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/altitude_off_m3" />
                    <TextView
                        android:id="@+id/altitudeBtnText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin_regular"
                        android:text="@string/mainFeatureTextAltitude"
                        android:maxLines="1"
                        android:autoSizeMaxTextSize="18sp"
                        android:autoSizeMinTextSize="12sp"
                        android:layout_marginTop="4dp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center_horizontal"
                        tools:ignore="VisualLintLongText" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/altitudeBtnSuccessId"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="-16dp"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/AltitudeContentDescription"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/success5" />
                        <TextView
                            android:id="@+id/altitudeBtnSetId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:autoSizeMaxTextSize="13sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/cabin_regular"
                            android:gravity="center_horizontal"
                            android:maxLines="2"
                            android:text="@string/pavlaMeter"
                            android:textSize="@dimen/mainImageInfoText"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 7th ROW - Flicker -->
                <LinearLayout
                    android:id="@+id/layoutFlickerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mainImageHeight"
                    android:background="@drawable/button_selector"
                    android:layout_marginBottom="@dimen/margin16"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/flickerFlashLightId"
                        android:layout_width="@dimen/MainImageSize"
                        android:layout_height="@dimen/MainImageSize"
                        android:background="#00FFFFFF"
                        android:contentDescription="@string/FlashlightFlickeringContentDescription"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/flickering_off_m3"/>
                    <TextView
                        android:id="@+id/flickeringBtnText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin_regular"
                        android:text="@string/mainFeatureTextFlicker"
                        android:maxLines="1"
                        android:autoSizeMaxTextSize="18sp"
                        android:autoSizeMinTextSize="12sp"
                        android:layout_marginTop="4dp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center_horizontal"
                        tools:ignore="VisualLintLongText" />
                    <TextView
                        android:id="@+id/flickerBtnSetId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="13sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/cabin_regular"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:text="@string/pavlaHz"
                        tools:ignore="VisualLintLongText" />
                </LinearLayout>

            </LinearLayout>


            <!-- Bottom Tools -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bottom_tools_selector"
                android:orientation="horizontal">

                <!-- Settings -->
                <ImageButton
                    android:id="@+id/settingsBtnId"
                    android:layout_width="@dimen/MainBottomRowImageSize"
                    android:layout_height="@dimen/MainBottomRowImageSize"
                    android:background="#00FFFFFF"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:layout_marginEnd="36dp"
                    android:contentDescription="@string/SettingsContentDescription"
                    app:srcCompat="@drawable/settings" />

                <!-- Info -->
                <ImageButton
                    android:id="@+id/infoBtnId"
                    android:layout_width="@dimen/MainBottomRowImageSize"
                    android:layout_height="@dimen/MainBottomRowImageSize"
                    android:layout_marginEnd="36dp"
                    android:background="#00FFFFFF"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/info"
                    tools:ignore="DuplicateSpeakableTextCheck,NestedWeights" />

                <!-- Rate -->
                <ImageButton
                    android:id="@+id/rateBtnId"
                    android:layout_width="@dimen/MainBottomRowImageSize"
                    android:layout_height="@dimen/MainBottomRowImageSize"
                    android:background="#00FFFFFF"
                    android:layout_marginEnd="36dp"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rate" />

                <!-- Support -->
                <ImageButton
                    android:id="@+id/supportBtnId"
                    android:layout_width="@dimen/MainBottomRowImageSize"
                    android:layout_height="@dimen/MainBottomRowImageSize"
                    android:background="#00FFFFFF"
                    android:contentDescription="@string/GeneralContentDescription"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/donate" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>