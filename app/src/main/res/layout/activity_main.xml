<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flashiiId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/rearCameraFlashLightBtnId"
        android:layout_width="125dp"
        android:layout_height="73dp"
        android:text="@string/rearCameraFlashLightBtn"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="13dp" />

    <Button
        android:id="@+id/takePhotoBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/takePhotoBtn"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="38dp" />

    <SeekBar
        android:id="@+id/flickeringBarId"
        android:layout_width="201dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:progressTint="#47C4EE"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flickerFlashLightId" />

    <Switch
        android:id="@+id/switchFlickerIncomingCallsId"
        android:layout_width="197dp"
        android:layout_height="45dp"
        android:checked="false"
        android:text="@string/incomingCallOff"
        android:textColor="#FDFDFD"
        android:textOff="@string/incomingCallOff"
        android:textOn="@string/incomingCallOn"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="50dp" />

    <ImageButton
        android:id="@+id/flashLightBtnId"
        android:layout_width="177dp"
        android:layout_height="153dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="124dp"
        android:background="#00A83939"
        android:contentDescription="@string/flashLightBtn"
        android:scaleType="fitEnd"
        android:src="@drawable/off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/flickerFlashLightId"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashLightBtnId"
        app:srcCompat="@drawable/off_flicker" />

    <ImageButton
        android:id="@+id/sosBtn"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginEnd="62dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/flashLightBtnId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342"
        app:srcCompat="@drawable/sos" />

</androidx.constraintlayout.widget.ConstraintLayout>