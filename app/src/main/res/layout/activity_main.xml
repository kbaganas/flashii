<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flashiiId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_r1"
    android:backgroundTint="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/MainImageSize"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/cabin_semibold"
                android:gravity="center|center_vertical"
                android:textColor="#3F64A1"
                android:maxLines="2"
                android:autoSizeMinTextSize = "16sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"/>

            <SeekBar
                android:id="@+id/flickeringBarId"
                android:layout_width="250dp"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:elevation="10dp"
                android:progressTint="#47C4EE"
                android:rotation="0"
                android:scaleX="1.25"
                android:scaleY="1.25"/>

            <!-- 1st row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CheckedTextView
                        android:id="@+id/timerThresholdId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"/>
                    <ImageButton
                        android:id="@+id/timerBtnId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/MainImageSize"
                        android:background="@drawable/button_selector"
                        android:contentDescription="@string/TimerContentDescription"
                        android:elevation="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/timer_off_m3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="26dp"
                    android:orientation="vertical">
                    <CheckedTextView
                        android:id="@+id/targetAltitudeLevelId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:visibility="invisible"/>
                    <ImageButton
                        android:id="@+id/altitudeBtnId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/MainImageSize"
                        android:background="@drawable/button_selector"
                        android:contentDescription="@string/AltitudeContentDescription"
                        android:elevation="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/altitude_off_m3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <CheckedTextView
                        android:id="@+id/powerLevelId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"/>
                    <ImageButton
                        android:id="@+id/batteryBtnId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/MainImageSize"
                        android:background="@drawable/button_selector"
                        android:contentDescription="@string/BatteryContentDescription"
                        android:elevation="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/battery_off_m3" />
                </LinearLayout>

            </LinearLayout>


            <!-- 2nd row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/switchFlickerIncomingCallsId"
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="@dimen/MainImageSize"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/IncomingCallContentDescription"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_call_off_m3" />

                <ImageButton
                    android:id="@+id/smsBtnId"
                    android:layout_marginHorizontal="26dp"
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="@dimen/MainImageSize"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/IncomingSMSContentDescription"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/incoming_sms_off_m3"/>

                <ImageButton
                    android:id="@+id/incomingSoundBtnId"
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="@dimen/MainImageSize"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/IncomingSoundContentDescription"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/sound_off_m3"/>

            </LinearLayout>


            <!-- 3rd row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/sosBtn"
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="@dimen/MainImageSize"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/SOSBtnContentDescription"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/sos_off_m3" />

                <ImageButton
                    android:id="@+id/incomingShakeBtnId"
                    android:layout_marginHorizontal="26dp"
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="@dimen/MainImageSize"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/ShakenBtnContentDescription"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tilt_off_m3"/>

                <ImageButton
                    android:id="@+id/networkConnectionBtn"
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="@dimen/MainImageSize"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/FlashlightFlickeringOnOffNetworkContentDescription"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/network_off_m3" />


            </LinearLayout>

            <!-- 4th row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/flickerFlashLightId"
                    android:layout_width="@dimen/MainImageSize"
                    android:layout_height="@dimen/MainImageSize"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/FlashlightFlickeringContentDescription"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/flickering_off_m3"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/flashLightBtnId"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/FlashlightBtnContentDescription"
                android:scaleType="centerInside"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/flashlight_off_m3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="160dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/button_selector"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/settingsBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:contentDescription="@string/GeneralContentDescription"
                app:srcCompat="@drawable/settings" />

            <ImageButton
                android:id="@+id/infoBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:contentDescription="@string/GeneralContentDescription"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/info"
                tools:ignore="DuplicateSpeakableTextCheck,NestedWeights" />

            <ImageButton
                android:id="@+id/rateBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:contentDescription="@string/GeneralContentDescription"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/rate" />

            <ImageButton
                android:id="@+id/donateBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:contentDescription="@string/GeneralContentDescription"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/donate" />

        </LinearLayout>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>