<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flashiiId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_r1"
    android:backgroundTint="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/MainTextHeight"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/cabin_semibold"
                android:gravity="center|center_vertical"
                android:textColor="#3F64A1"
                android:maxLines="3"
                android:autoSizeMinTextSize = "18sp"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- 1st Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <!-- Incoming SOS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageButton
                            android:id="@+id/sosBtn"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/SOSBtnContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/sos_off_m3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Send SOS message"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />

                    </LinearLayout>

                    <!-- Sound -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/incomingSoundBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/IncomingSoundContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/sound_off_m3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Short Sounds"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/incomingShakeBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/ShakenBtnContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/tilt_off_m3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Phone Tilt"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>



                    <!-- Battery -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/batteryBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/BatteryContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/battery_off_m3" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Battery Power"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>

                </LinearLayout>

                <!-- 2nd Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <!-- Flicker -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/flickerFlashLightId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/FlashlightFlickeringContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/flickering_off_m3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Flickering"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/flashLightBtnId"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#00FFFFFF"
                        android:contentDescription="@string/FlashlightBtnContentDescription"
                        android:layout_marginBottom="@dimen/margin16"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/flashlight_off_m3" />

                    <!-- Altitude -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:background="@drawable/button_selector"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/altitudeBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/AltitudeContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/altitude_off_m3" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Altitude Height"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>


                </LinearLayout>

                <!-- 3rd Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                    <!-- Incoming SMS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/smsBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/IncomingSMSContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/incoming_sms_off_m3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Incoming SMS"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>

                    <!-- Network -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/networkConnectionBtn"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/FlashlightFlickeringOnOffNetworkContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/network_off_m3" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Network Changes"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>

                    <!-- Incoming Call -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/switchFlickerIncomingCallsId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/IncomingCallContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/incoming_call_off_m3" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Incoming Call"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />

                    </LinearLayout>



                    <!-- Timer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="@dimen/margin16"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/timerBtnId"
                            android:layout_width="@dimen/MainImageSize"
                            android:layout_height="@dimen/MainImageSize"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/TimerContentDescription"
                            android:elevation="10dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/timer_off_m3" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin_regular"
                            android:text="Flicker on Time"
                            android:gravity="center_horizontal"
                            tools:ignore="VisualLintLongText" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <SeekBar
                    android:id="@+id/flickeringBarId"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="250dp"
                    android:layout_height="28dp"
                    android:background="@drawable/button_selector"
                    android:elevation="10dp"
                    android:progressTint="#47C4EE"
                    android:rotation="0"
                    android:scaleX="1.25"
                    android:scaleY="1.25"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bottom_tools_selector"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/settingsBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:contentDescription="@string/GeneralContentDescription"
                app:srcCompat="@drawable/settings" />

            <ImageButton
                android:id="@+id/infoBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:contentDescription="@string/GeneralContentDescription"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/info"
                tools:ignore="DuplicateSpeakableTextCheck,NestedWeights" />

            <ImageButton
                android:id="@+id/rateBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:contentDescription="@string/GeneralContentDescription"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/rate" />

            <ImageButton
                android:id="@+id/donateBtnId"
                android:layout_width="@dimen/MainBottomRowImageSize"
                android:layout_height="@dimen/MainBottomRowImageSize"
                android:background="#00FFFFFF"
                android:contentDescription="@string/GeneralContentDescription"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/donate" />

        </LinearLayout>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>