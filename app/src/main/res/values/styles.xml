<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="timePicker">
        <item name="android:textColorPrimary">#4f49b2</item> <!-- color for digits -->
        <item name="android:textColor">#4f49b2</item> <!-- color for colon -->
        <item name="android:colorControlNormal">#ca827d</item> <!-- color for (horizontal) delimiters -->
        <item name="android:textSize">15sp</item>
    </style>
    <style name="timePickerGrey">
        <item name="android:textColorPrimary">#434241</item> <!-- color for digits -->
        <item name="android:textColor">#434241</item> <!-- color for colon -->
        <item name="android:colorControlNormal">#434241</item> <!-- color for (horizontal) delimiters -->
        <item name="android:textSize">15sp</item>
    </style>
    <style name="button_support" >
        <item name="android:background">@color/blueOffBack2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:minWidth">90dp</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>
