<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="34dp" />
                    <solid android:color="@color/blueOffBack1" />
                </shape>
            </item>

            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:endColor="#27657b"
                        android:centerColor="#2e7993"
                        android:startColor="#27657b" />
